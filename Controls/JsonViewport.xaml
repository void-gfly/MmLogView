<UserControl x:Class="MmLogView.Controls.JsonViewport"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <TreeView Grid.Column="0" 
                  x:Name="JsonTreeView"
                  ItemsSource="{Binding JsonRootNodes}"
                  Tag="{Binding}"
                  Background="{DynamicResource MarkdownBackground}"
                  Foreground="{DynamicResource MarkdownForeground}"
                  BorderThickness="0"
                  Padding="5"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  ScrollViewer.CanContentScroll="False"
                  SelectedItemChanged="JsonTreeView_SelectedItemChanged">
            <TreeView.ItemContainerStyle>
                <Style TargetType="TreeViewItem">
                    <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
                    <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
                    <Setter Property="Foreground" Value="{DynamicResource MarkdownForeground}" />
                    <Setter Property="HorizontalAlignment" Value="Left" />
                    <EventSetter Event="Selected" Handler="TreeViewItem_Selected" />
                </Style>
            </TreeView.ItemContainerStyle>
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                    <StackPanel Orientation="Horizontal" Margin="0,2" Background="Transparent" 
                                Tag="{Binding DataContext, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                PreviewMouseRightButtonDown="TreeViewItem_PreviewMouseRightButtonDown">
                        <StackPanel.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="{Binding PlacementTarget.Tag.Lang.MenuCopyNode, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                          Click="MenuCopyNode_Click" />
                                <MenuItem Header="{Binding PlacementTarget.Tag.Lang.MenuCopyNodeAndChildren, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                          Click="MenuCopyNodeAndChildren_Click" />
                            </ContextMenu>
                        </StackPanel.ContextMenu>
                        <TextBlock Text="{Binding Name}" FontWeight="Bold" />
                        <TextBlock Text=" : " x:Name="Colon" />
                        <TextBlock Text="{Binding Value}" />
                    </StackPanel>
                    <HierarchicalDataTemplate.Triggers>
                        <DataTrigger Binding="{Binding Value}" Value="">
                            <Setter TargetName="Colon" Property="Visibility" Value="Collapsed" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Value}" Value="{x:Null}">
                            <Setter TargetName="Colon" Property="Visibility" Value="Collapsed" />
                        </DataTrigger>
                    </HierarchicalDataTemplate.Triggers>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>

        <GridSplitter Grid.Column="1" 
                      Width="5" 
                      HorizontalAlignment="Center" 
                      VerticalAlignment="Stretch" 
                      Background="{DynamicResource BorderBrush}" 
                      ShowsPreview="True" />

        <TextBox Grid.Column="2" 
                 x:Name="JsonTextBox"
                 Text="{Binding JsonText, Mode=OneWay}" 
                 IsReadOnly="True"
                 FontFamily="Consolas, Global User Interface, Courier New"
                 FontSize="14"
                 Background="{DynamicResource MarkdownBackground}"
                 Foreground="{DynamicResource MarkdownForeground}"
                 BorderThickness="0"
                 Padding="20"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 ScrollViewer.CanContentScroll="False"
                 SelectionChanged="JsonTextBox_SelectionChanged" />
    </Grid>
</UserControl>
